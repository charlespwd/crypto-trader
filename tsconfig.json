{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "src": [
        "src/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
